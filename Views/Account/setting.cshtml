@model EAD_TermProject.Models.customer
@using EAD_TermProject.Models



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
<!DOCTYPE html>
<html>
<head>
<title></title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.js"></script>

     <script>
         $(document).ready(function () {
             $("#SignUp").on('click', function () {
                 if ($("#username").val().length == 0)
                     alert("Please enter username");
                 if ($("#name").val().length == 0)
                     alert("Please enter name");
                 if ($("#password").val().length == 0)
                     alert("Please enter password");
                 if ($("#cnic").val().length == 0 || $("#cnic").val().length > 13)
                     alert("Please enter CNIC(13-digits Only)");
                 if ($("#email").val().length == 0)
                     alert("Please enter Valid email");
             });
         });
        
    </script>

</head>
<body style="background-color:ghostwhite">

     @{customer c = (customer)Session["user"];
        }
<div class="container" >
    <div class="jumbotron" style="height:450px;background-image:url(/Images/whitesmoke.jpg)">
  <div class="form-group">
    </div>
        @if (Session["usernamevalidation"] != null)
        {
           <script>
               alert("This Username Already Exists");
               
           </script>
            Session["usernamevalidatio"]=null;
        }
        @using(Html.BeginForm("setting","Account",null,FormMethod.Post)){
      <div class="form-group">
      <div class="col-sm-10">
          @Html.Label("Enter Username ")<br />
        @Html.TextBoxFor(m=>m.username , new { @placeholder="Enter username",size="100",style="height:40px;border:inset"})
      </div>
    </div>
       <div class="form-group">
      <div class="col-sm-10">
          @Html.Label("Enter Name ")<br />
         @Html.TextBoxFor(m=>m.name, new { @placeholder="Enter Name",style="height:40px;border:inset",size="100"})
      </div>
    </div>
    <div class="form-group">
    <div class="col-sm-10">          
        @Html.Label("Enter Password ")<br />
        @Html.TextBoxFor(m=>m.password, new { @placeholder="Enter password",style="height:40px;border:inset",size="100"})
      </div>
    </div>
       <div class="form-group">
      <div class="col-sm-10"> 
       
        @Html.Label("Enter CNIC")<br />         
        @Html.TextBoxFor(m=>m.cnic ,new {@placeholder="Enter cnic",pattern="[0-9]{13}",title="13-digit only(0-9)",style="height:40px;border:inset",size="100"})      
        
      </div>
    </div>
       <div class="form-group">
      <div class="col-sm-10">          
        @Html.Label("Enter Valid Email")<br />
          @Html.TextBoxFor(m=>m.email,new { @placeholder="Enter valid email",pattern="[A-Za-z0-9._%+-]{3,}@[a-zA-Z]{3,}([.]{1}[a-zA-Z]{2,}|[.]{1}[a-zA-Z]{2,}[.]{1}[a-zA-Z]{2,})",style="height:40px;border:inset",size="100"})
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" id="SignUp" class="btn btn-default" style="background-color:whitesmoke;margin-left:-170px;width:150px;height:50px">Update</button>
     
      </div>
    </div>
            }
        </div>
</div>

</body>
</html>