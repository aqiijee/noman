@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
<!DOCTYPE html>
<html>
<head>
<title></title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.js"></script>

    
       <style>
  .carousel-inner > .item > img,
  .carousel-inner > .item > a > img {
      width: 300px;
     margin: auto;
      height: 400px;
  }
  </style>
       @*******************************************************************************************************@
    @******Script*********@
    
    <script>
       
        $(document).ready(function () {
            $("#submit").on('click', function () {
                if ($("#username").val().length == 0) {
                    var result = prompt("Enter username");
                    $("#username").val(result);
                }
                if ($("#password").val().length == 0) {
                    var result1 = prompt("Enter password");
                    $("#password").val(result1);
                }
            })
       
            
        });
    </script>

</head>
<body style="background-color:ghostwhite">

    <div class="container">
       
           
            <div class="row">
                <!--1st col-->
                <div class="col-sm-8">
                     <div  id="loginfocus" name="loginfocus" class="jumbotron" style="background-image:url(/Images/whitesmoke.jpg)">
                        
                    @if (Session["login"]!=null)
                    {
                        <script>
                            alert("Wrong username or password");
                        </script>
                        Session["login"] = null;
                    }
                         
 @using(Html.BeginForm("login","Account",null,FormMethod.Post)){
   <div class="form-group">
      @Html.Label("Enter UserName")
      @Html.TextBox("username", null, new { @placeholder="Enter username",size="70",style="height:40px;border:inset;background-color:whitesmoke"})
  </div>
  <div class="form-group">
      @Html.Label("Enter password")
   @Html.Password("password", null, new { @placeholder = "Enter password", size = "70", style = "height:40px;border:inset;background-color:whitesmoke" })
    </div>
  <button id="submit" type="submit" class="btn btn-default" style="background-color:whitesmoke">Login</button>
          <a href="/Account/register"><button type="button" class="btn btn-default" style="background-color:whitesmoke">SignUp</button></a>
}        </div>
         </div>
     
       
            <!--2nd col-->
            <div class="col-sm-4">
                             
                <div class="container-fluid">
  <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:300px">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
      <li data-target="#myCarousel" data-slide-to="4"></li>
      <li data-target="#myCarousel" data-slide-to="5"></li>
      <li data-target="#myCarousel" data-slide-to="6"></li>
      <li data-target="#myCarousel" data-slide-to="7"></li>
     
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="~/Images/beverages.jpg" alt="Beverages"  width="100px">
         <div class="carousel-caption">
           <h2><font color="blue">Beverages</font></h2>
          </div>
      </div>
        
      <div class="item">
        <img src="~/Images/camerafuji.jpg" alt="canneddairy" width="100" height="100">
           <div class="carousel-caption">
           <h2><font color="blue">canneddairy</font></h2>
          </div>
      </div>
    
      <div class="item">
        <img src="~/Images/camerafuji1.jpg" alt="cannedfood" width="100" height="100">
           <div class="carousel-caption">
           <h2><font color="blue">cannedfood</font></h2>
          </div>
      </div>

      <div class="item">
        <img src="~/Images/laptopapple.jpg" alt="canndefruit" width="100" height="100">
           <div class="carousel-caption">
           <h2><font color="blue">canndefruit</font></h2>
          </div>
      </div>

      <div class="item">
        <img src="~/Images/cosmatics.jpg" alt="cosmatics" width="100" height="100">
             <div class="carousel-caption">
           <h2><font color="blue">cosmatics</font></h2>
          </div>
      </div>

        <div class="item">
        <img src="~/Images/soaps.jpg" alt="soaps" width="100" height="100">
             <div class="carousel-caption">
           <h2><font color="blue">soaps</font></h2>
          </div>
      </div>

        <div class="item">
        <img src="~/Images/stationery.jpg" alt="stationery" width="100" height="100">
             <div class="carousel-caption">
           <h2><font color="blue">stationery</font></h2>
          </div>
      </div>

        <div class="item">
        <img src="~/Images/oil.jpg" alt="oil" width="100" height="100">
             <div class="carousel-caption">
           <h2><font color="blue">oil</font></h2>
          </div>
      </div>
     
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>   
    </div>
        </div>
           
       
       
    <br>
    <br>
    <br>
    <br>

</body>
</html>