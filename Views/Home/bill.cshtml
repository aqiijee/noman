@model IEnumerable<EAD_TermProject.Models.item>
@using EAD_TermProject.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery.js"></script>



    </head>
    <body>
        <div class="container">
            @{
                customer c = (customer)Session["user"];
                }
         <table class="table table-bordered table-bordered">
        <tr class="info">
           <th>
               Receipt
           </th>
        </tr>
             <tr class="info">
           <th>
               Cnic :@c.cnic
           </th>
                 <th>
               Name :@c.name
           </th>
                 <th>
                     Rehmat Online Shopping
                 </th>
                 <th>
                     042-345444
                 </th>
        </tr>
            <hr class="divider" />
             <tr class="success">
                 <th>ItemName</th><th>BrandName</th><th>ItemSize</th><th>Itemprice</th>
             </tr>
           
    @foreach(var data in Model)
    {
        <tr class="success">
         
            <td><big>@data.itemname</big></td>
            <td><big>@data.brandname</big></td>
            <td><big>@data.itemsize</big></td>
           <td><big>@data.itemprice</big></td>
           @{
        Session["total"] = (int)Session["total"] + data.itemprice;
               }

        </tr>
       
    }
              <tr class="danger">
            <th>
                Total Amount   : <big>Rs.</big>@((int)Session["total"])
            </th>
        </tr>
        </table>
            </div>



    </body>
</html>

